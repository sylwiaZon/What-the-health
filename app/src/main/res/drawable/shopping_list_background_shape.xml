
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom 2dp Shadow -->
<item>
    <shape  android:shape="rectangle">

        <gradient
            android:endColor="#979797"
            android:angle="135"
            android:gradientRadius="360dp"
            android:startColor="#3C3C3C" />

        <corners android:radius="10dp" />

    </shape>
</item>

<!-- White Top color -->
<item
    android:bottom="2dp" android:left="2dp">

    <shape
        android:shape="rectangle">
        <corners
            android:radius="10dp" />
        <solid
            android:color="#FFFFFF" />

        <size
            android:width="100dp"
            android:height="50dp" />

    </shape>

</item>


</layer-list>